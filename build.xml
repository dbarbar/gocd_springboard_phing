  <target name="deploy-code"
          depends="init"
          description="Deploys a Springboard package to a destination server">

    <if>
      <equals arg1="${springboard.make.type}" arg2="blank" />
      <then>
        <property name="springboard.package.filename"
                  value="springboard-${springboard.version}.tar.gz" />
        <property name="springboard.package.dirname"
                  value="${springboard.version}" />
      </then>
      <else>
        <property name="springboard.package.filename"
                  value="springboard-${springboard.version}-${springboard.make.type}.tar.gz" />
        <property name="springboard.package.dirname"
                  value="${springboard.version}-${springboard.make.type}" />
      </else>
    </if>

    <!-- prep the local deploy environment -->
    <delete dir="build/deploy" />
    <mkdir dir="build/deploy/${springboard.package.dirname}" />

    <!-- fetch the specified version's package from the server -->
    <if>
      <!-- is packages_url a reference to a local file? -->
      <available file="${springboard.deploy.packages_url}" type="dir" />
      <then>
        <!-- untar the local file -->
        <untar file="${springboard.deploy.packages_url}/${springboard.package.filename}"
               todir="build/deploy/${springboard.package.dirname}"
               forceExtract="yes" />
      </then>
      <else>
        <!-- fetch the remote package and untar -->
        <httpget url="${springboard.deploy.packages_url}/${springboard.package.filename}"
                 dir="build/deploy" />
        <untar file="build/deploy/${springboard.package.filename}"
               todir="build/deploy/${springboard.package.dirname}"
               forceExtract="yes" />
      </else>
    </if>

    <!-- rsync all but the sites/* directories -->
    <filesync sourcedir="build/deploy/${springboard.package.dirname}"
              destinationdir="${springboard.deploy.destination}/"
              excludeFile="deploy.excludesfile"
              checksum="true"
              delete="true"
              verbose="true" />

    <!-- rsync the sites/all directory separately -->
    <filesync sourcedir="build/deploy/${springboard.package.dirname}/sites/all"
              destinationdir="${springboard.deploy.destination}/${springboard.package.dirname}/sites/"
              checksum="true"
              delete="true"
              verbose="true" />

  </target>


